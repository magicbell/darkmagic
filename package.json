{
  "name": "darkmagic",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "author": "Stephan Meijer",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "clean": "manypkg exec yarn clean",
    "start": "turbo run start --parallel --no-cache",
    "start:example": "yarn --cwd example && yarn --cwd example start",
    "start:storybook": "cross-env NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6006",
    "start:playroom": "playroom start --config .playroom/playroom.config.cjs",
    "build": "run-s build:packages build:storybook build:playroom",
    "build:packages": "turbo run build",
    "build:example": "yarn --cwd example && yarn --cwd example build",
    "build:storybook": "cross-env NODE_OPTIONS=--openssl-legacy-provider build-storybook -o dist/storybook && node .storybook/post-build.js",
    "build:playroom": "cross-env NODE_OPTIONS=--openssl-legacy-provider playroom build --config .playroom/playroom.config.cjs",
    "lint": "run-s lint:*",
    "lint:typescript": "tsc --build",
    "lint:eslint": "eslint --fix .",
    "test": "vitest -c scripts/vite/vite.config.js --run --coverage",
    "test:watch": "vitest -c scripts/vite/vite.config.js",
    "test:ci": "cross-env CI=true vitest -c scripts/vite/vite.config.js --passWithNoTests",
    "postinstall": "husky install && node scripts/sync-paths.js && manypkg check",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:release": "yarn build && yarn prettier --write '{packages,example}/*/{package.json,CHANGELOG.md}' '.changeset/*.json' && changeset publish",
    "console": "ts-node"
  },
  "lint-staged": {
    "*.{md,json,yml,yaml}": [
      "prettier -w"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.24.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@manypkg/cli": "^0.21.0",
    "@size-limit/preset-small-lib": "^11.1.0",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addons": "^6.5.16",
    "@storybook/builder-vite": "^0.2.2",
    "@storybook/react": "^6.5.16",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vanilla-extract/babel-plugin-debug-ids": "^1.0.3",
    "@vitest/coverage-c8": "^0.23.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^9.0.10",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "npm-run-all2": "^6.1.2",
    "playroom": "^0.37.0",
    "prettier": "^3.2.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "replace-in-files": "^3.0.0",
    "rimraf": "^5.0.5",
    "rollup-plugin-analyzer": "^4.0.0",
    "size-limit": "^11.0.0",
    "tiny-glob": "^0.2.9",
    "tslib": "^2.6.2",
    "tsx": "^4.8.2",
    "turbo": "^1.13.0",
    "typescript": "^5.4.2",
    "vite": "^3.1.0",
    "vite-plugin-banner": "^0.5.0",
    "vitest": "^0.23.1",
    "vitest-github-actions-reporter": "^0.8.3"
  }
}
