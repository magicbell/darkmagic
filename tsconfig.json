{
  "compilerOptions": {
    "composite": false,
    "target": "ES2018",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "jsx": "react",
    "module": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/fixtures": ["fixtures"],
      "~/sb-decorators": [".storybook/decorators"],
      "@darkmagic/react": ["packages/react/src"]
    }
  },
  "references": [
    {
      "path": "./packages/react/tsconfig-esm.json"
    }
  ],
  "exclude": [
    "**/*.stories.*",
    "**/*.spec.*",
    "**/*.test.*",
    "dist",
    "node_modules"
  ]
}
